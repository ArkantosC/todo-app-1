<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/cardview_content_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/cardview_content_margin">

            <CheckBox
                android:id="@+id/cbFinished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Donec odio. Quisque volutpat mattis eros." />

            <TextView
                android:id="@+id/tvFinishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finaliza el: 27/11/2017"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_gravity="right"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_crop_original"
            android:layout_gravity="right|center_vertical" />

    </LinearLayout>

</android.support.v7.widget.CardView>